[
  {
    "id": "evening_start_with_open_panel",
    "trigger": "phase_changed",
    "conditions": {
      "and": [
        {
          "new_phase": "evening"
        },
        {
          "or": [
            {
              "reed_open": "kitchen_panel"
            },
            {
              "reed_open": "storage_panel"
            }
          ]
        }
      ]
    },
    "actions": [
      {
        "apply_scene": "evening"
      }
    ],
    "evaluate_on_startup": true
  },
  {
    "id": "panel_open_in_evening",
    "trigger": "reed_state_changed",
    "conditions": {
      "and": [
        {
          "new_state": "Open"
        },
        {
          "reed_id": [
            "kitchen_panel",
            "storage_panel"
          ]
        },
        {
          "phase": "evening"
        }
      ]
    },
    "actions": [
      {
        "apply_scene": "evening"
      }
    ],
    "once_per_day": true,
    "evaluate_on_startup": true
  },
